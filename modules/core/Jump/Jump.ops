   <opcode name="to__i" char="2">
      <description>Jumps to opcode at opcode_pos.</description>
      <parameters count="1">
         <parameter index="0" type="svm::int_type" name="opcode_pos" description="The position to which jump."/>
      </parameters>
      <body>
         i = ((svm::Int*)argv[0])->value;
         ASSERT(i &lt; block->opcode_count, "You're jumping off the block, don't forget the rope.");
      </body>
   </opcode>

   <opcode name="unless__bi" char="u">
      <description>Jumps to opcode at opcode_pos if condition is false.</description>
      <parameters count="2">
         <parameter index="0" type="svm::bool_type" name="condition" />
         <parameter index="1" type="svm::int_type" name="opcode_pos" />
      </parameters>
      <body>
         if (argv[0] == svm::False)
         {
            i = ((svm::Int*)argv[1])->value;
         }
      </body>
   </opcode>

   <opcode name="return" char="&lt;">
      <description>Returns from the current block.</description>
      <parameters count="0" />
      <body>
         i = block->count();
      </body>
   </opcode>
</namespace>

