<?xml version="1.0" encoding="utf-8" ?>

<namespace name="jump" full-name="core.jump" char=">">
   <include src="svm/Bool.h" />
   <include src="svm/String.h" />

   <opcode name="if__bi" char="i">
      <description>Jumps to opcode at position opcode_pos if condition is true.</description>
      <parameters count="2">
         <parameter index="0" type="svm::bool_type" name="condition" />
         <parameter index="1" type="svm::int_type" name="opcode_pos" />
      </parameters>
      <body>
         if (argv[0] == svm::True)
         {
            i = ((svm::Int*)argv[1])->value;
         }
      </body>
   </opcode>

   <opcode name="if_else_bss" char="e">
      <description>Jumps to opcode at position if_opcode_pos if condition is true, otherwise jumps at else_opcode_pos.</description>
      <parameters count="3">
         <parameter index="0" type="svm::bool_type" name="condition" />
         <parameter index="1" type="svm::string_type" name="if_opcode_pos" />
         <parameter index="2" type="svm::string_type" name="else_opcode_pos" />
      </parameters>
      <body>
         svm::Block* block;
         if (argv[0] == svm::True)
         {
            block = this->get_block(((svm::String*)argv[1])->value);
            this->import_swap(block);
            this->run_block(block, true);
         }
         else
         {
            block = this->get_block(((svm::String*)argv[2])->value);
            this->import_swap(block);
            this->run_block(block, true);
         }
      </body>
   </opcode>

